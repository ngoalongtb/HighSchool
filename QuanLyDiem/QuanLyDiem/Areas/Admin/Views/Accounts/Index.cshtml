@model IEnumerable<Model.EF.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Tài khoản
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Tài khoản</a></li>
        <li class="active">Danh sách</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Danh sách tài khoản</h3>
            <h3>@Html.ActionLink("Tạo mới", "Create")</h3>
        </div>
        <div>
            
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <th>
                        @Html.DisplayNameFor(model => model.GiaoVien.ten)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.mat_khau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ten_hien_thi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.url_anh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.da_xoa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.la_admin)
                    </th>
                    <th></th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaoVien.ten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mat_khau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ten_hien_thi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.url_anh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.da_xoa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.la_admin)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.tai_khoan }) |
                                @Html.ActionLink("Details", "Details", new { id = item.tai_khoan }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.tai_khoan })
                            </td>
                        </tr>
                    }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</section>
<!-- /.content -->

@section script{
    <script>
        $(document).ready(function () {
            $('#example1').DataTable()
            //$('#example2').DataTable({
